# Atomic Mesh v7.4 Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Path to SQLite database (default: ./mesh.db)
ATOMIC_MESH_DB=mesh.db

# Path to docs directory (default: ./docs)
ATOMIC_MESH_DOCS=./docs

# =============================================================================
# ROUTER CONFIGURATION
# =============================================================================

# Timeout for LLM Smart Path routing in seconds (default: 3.0)
ROUTER_TIMEOUT=3.0

# =============================================================================
# LLM CONFIGURATION (Optional - for Smart Path routing)
# =============================================================================

# OpenAI API Key (required for Smart Path)
# OPENAI_API_KEY=sk-your-key-here

# LLM Model to use (default: gpt-4o-mini)
# LLM_MODEL=gpt-4o-mini

# =============================================================================
# PORT CONFIGURATION
# =============================================================================

# Dev server ports that can be killed by cleanup tools
# Default range: 3000-10000
# DEV_PORT_RANGE_START=3000
# DEV_PORT_RANGE_END=10000

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO
